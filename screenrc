# Based on Chris Will's default screenrc https://gist.github.com/ChrisWills/1337178

startup_message off

attrcolor b ".I"

# Enable shift-pgUp and shift-pgDn
termcapinfo xterm|xterms|xs|rxvt ti@:te@

term xterm-256color

defscrollback 10000

# convenient status line
hardstatus alwayslastline "%{= Kd} %{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-= %{KG} %H%{KW}|%{KY}%101`%{KW}|%D %M %d %Y%{= Kc} %C%A%{-}"
